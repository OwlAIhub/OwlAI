{
  "indexes": [
    // Users collection - for phone auth
    {
      "collectionGroup": "users",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "phoneNumber", "order": "ASCENDING" },
        { "fieldPath": "isActive", "order": "ASCENDING" },
        { "fieldPath": "lastLoginAt", "order": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "users",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isActive", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },

    // Onboarding collection
    {
      "collectionGroup": "onboarding",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "isComplete", "order": "ASCENDING" },
        { "fieldPath": "completedAt", "order": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "onboarding",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "exam", "order": "ASCENDING" },
        { "fieldPath": "subject", "order": "ASCENDING" },
        { "fieldPath": "completedAt", "order": "DESCENDING" }
      ]
    },

    // Chat users
    {
      "collectionGroup": "chatUsers",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "subscription.plan", "order": "ASCENDING" },
        { "fieldPath": "lastActiveAt", "order": "DESCENDING" }
      ]
    },

    // Contacts collection - simplified
    {
      "collectionGroup": "contacts",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "contacts",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "inquiryType", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    },

    // Chat sessions
    {
      "collectionGroup": "chatSessions",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "userId", "order": "ASCENDING" },
        { "fieldPath": "updatedAt", "order": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "chatSessions",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "userId", "order": "ASCENDING" },
        { "fieldPath": "isPinned", "order": "ASCENDING" },
        { "fieldPath": "updatedAt", "order": "DESCENDING" }
      ]
    },
    {
      "collectionGroup": "chatSessions",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "userId", "order": "ASCENDING" },
        { "fieldPath": "isArchived", "order": "ASCENDING" },
        { "fieldPath": "updatedAt", "order": "DESCENDING" }
      ]
    },

    // Messages
    {
      "collectionGroup": "messages",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "sessionId", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "ASCENDING" }
      ]
    },
    {
      "collectionGroup": "messages",
      "queryScope": "COLLECTION",
      "fields": [
        { "fieldPath": "userId", "order": "ASCENDING" },
        { "fieldPath": "status", "order": "ASCENDING" },
        { "fieldPath": "createdAt", "order": "DESCENDING" }
      ]
    }
  ],
  "fieldOverrides": [
    // Users
    {
      "collectionGroup": "users",
      "fieldPath": "phoneNumber",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },
    {
      "collectionGroup": "users",
      "fieldPath": "displayName",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },

    // Contacts
    {
      "collectionGroup": "contacts",
      "fieldPath": "name",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },
    {
      "collectionGroup": "contacts",
      "fieldPath": "email",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },

    // Chat sessions
    {
      "collectionGroup": "chatSessions",
      "fieldPath": "title",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },

    // Messages
    {
      "collectionGroup": "messages",
      "fieldPath": "content",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    },
    {
      "collectionGroup": "messages",
      "fieldPath": "sender",
      "ttl": false,
      "indexes": [{ "order": "ASCENDING", "queryScope": "COLLECTION" }]
    }
  ]
}
