rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // User profile data (complete user document)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Global collections (if needed in future)
    match /global/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write to global collections
    }

    // Analytics collection (for admin use)
    match /analytics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write analytics
    }
  }
}
